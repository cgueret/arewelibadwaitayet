---
import apps, { Lang } from "../apps.ts";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Libadwaita Apps - A Curated List for Gnome</title>
    <meta name="description" content="" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href="https://arewelibadwaitayet.com" />
  </head>
  <body class="dark:bg-zinc-950">
    <div class="max-w-7xl w-full mx-auto px-4 md:px-6 lg:px-8">
      <div class="max-w-4xl flex flex-col mx-auto text-center">
        <h1 class="text-6xl dark:text-white font-extrabold text-zinc-900 mt-12">
          Discover the Best LibAdwaita Apps in One Place
        </h1>
        <h2 class="text-xl dark:text-white font-extrabold text-zinc-900 mt-8">
          Your Comprehensive List for LibAdwaita-Powered Linux Applications
        </h2>
        <p
          class="leading-relaxed text-lg text-zinc-800 mt-4 dark:text-zinc-200"
        >
          Uncover a curated selection of Linux apps utilizing libadwaita.
          Explore the latest and most exciting applications seamlessly
          integrating with LibAdwaita.
          <strong>üöÄ Explore. Find. Innovate. üßë‚Äçüíª</strong>
        </p>
      </div>
      <main
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-8 gap-y-12 mt-20"
      >
        {
          apps.map((app) => (
            <a
              class="relative"
              href={`https://flathub.org/apps/${app.id}`}
              target="_blank"
              rel="noreferrer noopener"
            >
              <span
                class="ml-1.5 mt-1.5 absolute top-0 lef-0 text-xs px-1.5 py-0.5 rounded-md font-medium dark:bg-zinc-800 dark:text-white"
                class:list={{
                  "bg-blue-100 text-blue-900": app.lang === Lang.Python,
                  "bg-sky-100 text-sky-900": app.lang === Lang.Go,
                  "bg-orange-100 text-orange-900": app.lang === Lang.Rust,
                  "bg-lime-100 text-lime-900": app.lang === Lang.CSharp,
                  "bg-purple-100 text-purple-900": app.lang === Lang.Vala,
                  "bg-zinc-100 text-zinc-900":
                    app.lang === Lang.C || app.lang === Lang.Crystal,
                  "bg-pink-100 text-pink-900": app.lang === Lang.CPlusPlus,
                  "bg-yellow-100 text-yellow-900": app.lang === Lang.JavaScript,
                }}
              >
                {app.lang}
              </span>
              <article class="hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors rounded-xl p-6 flex flex-col items-center">
                <img
                  alt={`${app.name} logo`}
                  class="w-28 md:w-20"
                  loading="lazy"
                  src={`https://dl.flathub.org/repo/appstream/x86_64/icons/128x128/${app.id}.png`}
                />
                <span class="text-lg font-medium text-zinc-900 dark:text-white">
                  {app.name}
                </span>
                <p class="text-sm text-zinc-600 dark:text-zinc-400 text-center">
                  {app.desc}
                </p>
              </article>
            </a>
          ))
        }
      </main>
      <div class="mt-12 text-center text-zinc-600 dark:text-zinc-300 font-bold">
        A total of {apps.length} apps using LibAdwaita
      </div>
    </div>

    <footer class="bg-zinc-50 mt-20 dark:bg-zinc-900">
      <div
        class="max-w-7xl w-full text-center py-6 text-zinc-700 dark:text-zinc-300 text-sm font-medium mx-auto px-4 md:px-6 lg:px-8"
      >
        Contributions are welcome on <a
          class="text-teal-700 dark:text-teal-300 underline"
          target="_blank"
          rel="noopener noreferrer"
          href="https://github.com/redjohnsh/arewelibadwaitayet">GitHub</a
        >
      </div>
    </footer>
  </body>
</html>
